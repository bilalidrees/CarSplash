<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionMenuTextAppearance">@style/MenuTextAppearance</item>
        <item name="actionMenuTextColor">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>`
        <item name="drawerArrowStyle">@style/CustomDrawerArrowStyle</item>
    </style>

    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/iron</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomDrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/colorAccent</item>
    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--buttons color-->
        <item name="colorAccent">@color/color_grey</item>
        <!--title and message color-->
        <item name="android:textColorPrimary">@color/color_grey</item>
        <!--dialog background-->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="CustomDialogue" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleText"></item>
        <item name="DialogSpotColor">@color/colorPrimary</item>
        <item name="DialogSpotCount">4</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MenuTextAppearance">
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/raleway_thin</item>
    </style>

    <style name="TabTextApperance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/raleway_light</item>
        <item name="android:textColor">@color/color_grey</item>
    </style>

    <style name="TabTextApperance_bottom">
        <item name="android:textSize">12sp</item>
    </style>

</resources>
